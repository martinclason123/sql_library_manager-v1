extends layout

block content

 h1 Update Book 
 form(method="POST" action="/books/"+ bookDetails.id)
  p
   label(for="title")= bookDetails.title
   input(input name="title" type="text" id="title" value= bookDetails.title)
  p
   label(for="author")= bookDetails.author
   input(input name="author" type="text" id="author" value= bookDetails.author)
  p
   label(for="genre")= bookDetails.genre
   input(input name="genre" type="text" id="genre" value= bookDetails.genre)
  p
   label(for="year")= bookDetails.year
   input(input name="year" type="text" id="year" value= bookDetails.year)
  p 
   input(type="submit" value="Update Book") 
 form(method="post" action="/books/" + bookDetails.id + "/delete" onsubmit="return confirm('Are you sure?');")
  p 
   a(class="button" href="/books") Cancel 
  p 
   input(type="submit" value="Delete Book")