extends layout 

block content
 h1= title 
 p 
  form(method="POST" action="/search" class="search-form")
   p
    input(name="search" type="text" id="search" placeholder="search")
    button(class="button" type="submit")
     i(class="fa fa-search")
 p 
  a(class="button" href="/books/new") Create New Book    
   table
    thead
     tr 
      th Title 
      th Author 
      th Genre 
      th Year
       tbody 
        each book in books
         tr 
          td
           a(href="/books/" + book.id)= book.title
            td= book.author 
            td= book.genre 
            td= book.year
            
 div
  each pagination in pagElements    
   a(class="button" href= pagination.href)= pagination.label

